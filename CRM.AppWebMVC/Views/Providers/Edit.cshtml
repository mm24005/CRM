@model CRM.DTOs.ProviderDTOs.EditProviderDTO

@{
    ViewData["Title"] = "Edit Provider";
}

<h1 class="text-3xl font-bold mb-4">Editar Proveedor</h1>

<h4 class="text-lg font-medium mb-4">Información del Usuario</h4>
<hr class="mb-6" />

<form asp-action="Edit" class="space-y-6">
    <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

    <input asp-for="Id" type="hidden" />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="form-group">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Nombre</label>
            <input asp-for="Name" class="block w-full mt-1 p-2.5 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="Empresa" class="block text-sm font-medium text-gray-700">Apellido</label>
            <input asp-for="Empresa" class="block w-full mt-1 p-2.5 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Empresa" class="text-red-500 text-sm"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="form-group">
            <label asp-for="Email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
            <input asp-for="Email" type="email" class="block w-full mt-1 p-2.5 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="block text-sm font-medium text-gray-700">Teléfono</label>
            <input asp-for="Phone" type="tel" class="block w-full mt-1 p-2.5 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
        </div>
    </div>

    <div class="flex items-center mt-6 space-x-4">
        <button type="submit" class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg px-5 py-2.5">Modificar</button>
        <a asp-action="Index" class="text-red-700 hover:text-red-900 text-sm">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
